<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gestor de Contactos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #4e73df;
      --hover-color: #3a5bbf;
      --danger-color: #e74a3b;
      --warning-color: #f6c23e;
    }
    
    body {
      background-color: #f8f9fc;
    }
    
    .card {
      border: none;
      border-radius: 15px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }
    
    .card-header {
      background-color: var(--primary-color);
      color: white;
      border-radius: 15px 15px 0 0 !important;
      padding: 1.5rem;
    }
    
    .table-responsive {
      border-radius: 0 0 15px 15px;
      overflow: hidden;
    }
    
    .table {
      margin-bottom: 0;
    }
    
    .table thead th {
      background-color: #f8f9fc;
      border-bottom: 2px solid #e3e6f0;
      font-weight: 700;
      color: #5a5c69;
      text-transform: uppercase;
      font-size: 0.8rem;
      letter-spacing: 0.5px;
      padding: 1rem;
    }
    
    .table tbody td {
      padding: 1rem;
      vertical-align: middle;
      border-top: 1px solid #e3e6f0;
    }
    
    .table tbody tr:hover {
      background-color: rgba(78, 115, 223, 0.05);
    }
    
    .btn-add {
      background-color: var(--primary-color);
      border: none;
      padding: 0.5rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s;
    }
    
    .btn-add:hover {
      background-color: var(--hover-color);
      transform: translateY(-2px);
    }
    
    .btn-action {
      padding: 0.35rem 0.75rem;
      font-size: 0.85rem;
      border-radius: 8px;
      transition: all 0.2s;
    }
    
    .btn-edit {
      background-color: var(--warning-color);
      color: #000;
    }
    
    .btn-edit:hover {
      background-color: #e0b52a;
      color: #000;
    }
    
    .btn-delete {
      background-color: var(--danger-color);
      color: white;
    }
    
    .btn-delete:hover {
      background-color: #d43a2b;
      color: white;
    }
    
    .badge-id {
      background-color: #e3e6f0;
      color: #4e73df;
      font-weight: 600;
      padding: 0.35rem 0.65rem;
      border-radius: 8px;
    }
    
    .empty-state {
      padding: 3rem;
      text-align: center;
      color: #858796;
    }
    
    .empty-state i {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: #dddfeb;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="m-0"><i class="fas fa-address-book me-2"></i>Lista de Contactos</h3>
            <a href="/add" class="btn btn-add text-white">
              <i class="fas fa-plus me-2"></i>Agregar Contacto
            </a>
          </div>
          
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Nombre</th>
                  <th>Domicilio</th>
                  <th>Correo</th>
                  <th>Teléfono</th>
                  <th class="text-end">Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% if (contactos.length === 0) { %>
                  <tr>
                    <td colspan="6" class="empty-state">
                      <i class="fas fa-inbox"></i>
                      <h4>No hay contactos registrados</h4>
                      <p>Comienza agregando tu primer contacto</p>
                      <a href="/add" class="btn btn-add text-white mt-3">
                        <i class="fas fa-plus me-2"></i>Agregar Contacto
                      </a>
                    </td>
                  </tr>
                <% } else { %>
                  <% contactos.forEach(c => { %>
                    <tr>
                      <td><span class="badge-id"><%= c.id %></span></td>
                      <td><strong><%= c.nombre %></strong></td>
                      <td><%= c.domicilio %></td>
                      <td><a href="mailto:<%= c.correo %>"><%= c.correo %></a></td>
                      <td><a href="tel:<%= c.telefono %>"><%= c.telefono %></a></td>
                      <td class="text-end">
                        <div class="d-flex justify-content-end gap-2">
                          <a href="/edit/<%= c.id %>" class="btn btn-action btn-edit">
                            <i class="fas fa-edit me-1"></i>Editar
                          </a>
                          <form action="/delete/<%= c.id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-action btn-delete" 
                                    onclick="return confirm('¿Estás seguro de eliminar este contacto?');">
                              <i class="fas fa-trash-alt me-1"></i>Eliminar
                            </button>
                          </form>
                        </div>
                      </td>
                    </tr>
                  <% }) %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Confirmación antes de eliminar
    document.querySelectorAll('.btn-delete').forEach(button => {
      button.addEventListener('click', (e) => {
        if (!confirm('¿Estás seguro de eliminar este contacto?')) {
          e.preventDefault();
        }
      });
    });
  </script>
</body>
</html>
